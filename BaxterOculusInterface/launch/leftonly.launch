<launch>
  <group name='bax-l'>
     <node pkg="baxter_lcm" name ="repeater_l" type = "LCMToRos.py" output="screen">
        <param name="id"  value="101" />
        <param name="lr"  value="L"/>
    </node>

     <node pkg="baxter_lcm" name ="listener_l" type = "BaxterInterface.py" output="screen">
        <param name="part" value="left" />
        <param name="id"  value="101" />
     </node>
     <node pkg="baxter_lcm" name ="listener_l_g" type = "BaxterInterface.py" output="screen">
        <param name="part" value="left_gripper" />
        <param name="id"  value="101" />
     </node>

     <node pkg="baxter_lcm" name ="listener_l_r" type = "BaxterInterface.py" output="screen">
        <param name="part" value="left_range" />
        <param name="id"  value="101" />
     </node>

     <node pkg="baxter_lcm" name ="listener_m_cam_l" type = "BaxterInterface.py" output="screen">
        <param name="part" value="monitor_camera_l" />
        <param name="id"  value="101" />
     </node>

     <node pkg="baxter_lcm" name ="listener_l_cam" type = "BaxterInterface.py" output="screen">
        <param name="part" value="left_camera" />
        <param name="id"  value="101" />
     </node>
     
     <node pkg="baxter_lcm" name ="self_sender_l" type = "LCMSelf.py" output="screen">
        <param name="id"    value="101" />
        <param name="type"    value="Baxter" />
        <param name="ability"   value="idk" />
        <param name="channels"  value="right_lcm_channel|right_lcm_valid|right_lcm|right_lcm_cmd|right_trigger_lcm|right_lcm_currentpos|right_lcm_range|left_lcm_range|confidence_threshold_lcm|right_lcm_camera"/>
        <param name="queryChannel"     value="control_query|101" />
        <param name="leftNDIChannel"   value="NDIBOX (Logitech Webcam C930e 1)" />
        <param name="rightNDIChannel"  value="NDIBOX (Logitech Webcam C930e 0)"/>
        <param name="broadcastChannel" value="global_self"/>
     </node>

     <node pkg="baxter_lcm" name ="QueryRos_l" type = "QueryToRos.py" output="screen">
        <param name="queryChannel"  value="control_query|101" />
     </node>

     <node pkg="baxter_lcm" name ="ConfidenceThresholdRos_l" type = "ConfidenceThresholdRos.py" output="screen">
        <param name="confidenceThresholdChannel"  value="confidence_threshold_lcm-101" />
     </node>

     <node pkg="baxter_lcm" name ="info_sender_l" type = "LCMInfo.py" output="screen">
        <param name="id"  value="101" />
        <param name="lcmChannel"  value="global_info"/>
        <param name="lr"  value="L"/>
     </node>
    
  </group>
</launch>
