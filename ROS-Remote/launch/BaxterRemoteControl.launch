    <param name="part" value="head" />
  </node>
  <node pkg="baxter_remote" name ="control_r" type = "BaxterInterface.py" output="screen">
    <param name="part" value="right" />
  </node>
  <node pkg="baxter_remote" name ="control_l" type = "BaxterInterface.py" output="screen">
    <param name="part" value="left" />
  </node>
  <node pkg="baxter_remote" name ="control_l_g" type = "BaxterInterface.py" output="screen">
    <param name="part" value="left_gripper" />
  </node>
  <node pkg="baxter_remote" name ="control_r_g" type = "BaxterInterface.py" output="screen">
    <param name="part" value="right_trigger" />
  </node>

